{
  "name": "ng4StarterKit",
  "version": "1.0.0",
  "description": "Simple ng4 starter project",
  "repository": {
    "type": "git",
    "url": "https://github.com/fingular/ng4StarterKit.git"
  },
  "scripts": {
    "build:dev": "webpack --config webpack.config.dev.js --progress --profile --colors",
    "build:prod:aot": "webpack --config webpack.config.prod-aot.js --progress --profile --colors",
    "build:aot:ngc" : "ngc -p tsconfig.aot.json",
    "server:dev": "webpack-dev-server --config webpack.config.dev.js --progress",
    "server:prod:aot": "webpack-dev-server --config webpack.config.prod-aot.js --progress"
  },
  "author": "oktay",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/compiler-cli": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/forms": "4.1.3",
    "@angular/http": "4.1.3",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@angular/platform-server": "4.1.3",
    "@angular/animations": "4.1.3",
    "@angular/router": "4.1.3",
    "core-js": "2.4.1",
    "rxjs": "5.4.0",
    "zone.js": "0.8.11"
  },
  "devDependencies": {
    "typescript": "2.3.3",
    "@types/node": "7.0.22",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "3.1.3",
    "concurrently": "3.4.0",
    "css-loader": "0.28.2",
    "file-loader": "0.11.1",
    "html-loader": "0.4.5",
    "html-webpack-plugin": "2.28.0",
    "ts-loader": "2.1.0",
    "raw-loader": "0.5.1",
    "style-loader": "0.18.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.4.5",
    "copy-webpack-plugin": "4.0.1",
    "clean-webpack-plugin": "0.1.16",
    "extract-text-webpack-plugin": "2.1.0"
  }
}

